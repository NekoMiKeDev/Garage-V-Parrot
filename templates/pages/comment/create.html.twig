{% extends 'base.html.twig' %}

{% block title %}Garage V.Parrot - Envoyer un commentaire
{% endblock %}

{% block body %}
	<div class="css-dark d-flex flex-column align-items-center">
		<button class="btn-back" onclick="goBack()">
			<i class="fa-solid fa-arrow-left"></i>
		</button>
		<div class="d-flex flex-column col-12 col-md-7 b-gold rounded-2 p-3">
			<h1 class="text-center h1-gold mb-5">Envoyer nous votre avis !
			</h1>
			{{ form_start(form) }}

			<div class="form-error">
				{{ form_errors(form) }}
			</div>

			<div class="d-flex flex-column">
				<div class="mb-4">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
				</div>

				<div class="mb-4">
					{{ form_label(form.comment) }}
					{{ form_widget(form.comment) }}
				</div>

				<div class="mb-4 d-flex flex-column justify-content-center">
					{{ form_label(form.rate) }}
					{{ form_widget(form.rate) }}
				</div>
			</div>

			<div class="d-flex justify-content-center">
				{{ form_row(form.submit) }}
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
