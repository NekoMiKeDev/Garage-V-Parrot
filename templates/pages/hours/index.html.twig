{% extends 'base.html.twig' %}

{% block title %}Modification des horaires
{% endblock %}

{% block body %}
	{% include "partials/_navigationAdmin.html.twig" %}
	<div class="css-dark d-flex flex-column align-items-center px-0 pt-0">
		<button class="btn-back" onclick="goBack()">
			<i class="fa-solid fa-arrow-left"></i>
		</button>
		<h1 class="h1-gold my-3">Gestion des horaires</h1>
		<div class="d-flex flex-wrap justify-content-center text-center w-100">
			{% for hour in hours %}
				<div class="m-5 p-3 b-gold rounded-2 col-md-5">
					<div class="mb-1 fw-bold fs-4">{{ hour.day }}</div>
					<div class="mb-1 fs-5">{{ hour.openingHours }}</div>
					<div class="mb-1 fs-5">{{ hour.closingHours }}</div>
					<a href="{{ path('hours.update', {'id': hour.id}) }}" class="btn btn-gold">
						Modifier
					</a>
				</div>
			{% endfor %}
		</div>
		<form action="{{ path('hours.index') }}" method="POST">
		    <button type="submit" class="btn-gold">Reinitialiser les horraires</button>
		</form>
	</div>
{% endblock %}
