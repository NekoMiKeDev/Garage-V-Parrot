{% extends 'base.html.twig' %}

{% block title %}Garage V.Parrot - Filtre : Voiture
{% endblock %}

{% block body %}
	<div class="css-dark">
		<button class="btn-back" onclick="goBack()">
			<i class="fa-solid fa-arrow-left"></i>
		</button>
		<div class="fs-4 text-gold text-center w-100 mb-3">filtre disponible :
		</div>
		<div class="w-100 d-flex justify-content-center">
			<button class="btn btn-gold mx-2 d-none" onclick="toggleFilter('priceBtn')">Prix</button>
			<button class="btn btn-gold mx-2 d-none" onclick="toggleFilter('mileageBtn')">Kilométrage</button>
			<button class="btn btn-gold mx-2 d-none" onclick="toggleFilter('yearOfManufactureBtn')">Année de mise en circulation</button>
		</div>
		<form id="filterForm" action="{{ path('car.filter') }}" method="POST" class="d-flex flex-column align-items-center justify-content-center w-100">
			<div id="price-div" class="mb-3 d-flex flex-column align-items-center w-100">
				<div class="fs-4 text-gold p-2 mb-3">
					ajuster le prix
				</div>
				<input type="range" id="price" name="price" min="0" max="100000" step="1000" value="50000" class="w-100 mb-3" oninput="toggleEvent(event)">
				<div id="price-value" class="btn-gold rounded-2 p-1">0 €</div>
			</div>

    <div class="mb-3 d-flex flex-column align-items-center w-100">
        <div class="fs-4 text-gold p-2 mb-3">
            Rechercher par modèle
        </div>
        <input type="text" id="search" name="search" class="w-25 mb-3 text-center" oninput="searchEvent()">
        <div id="search-value" class="btn-gold rounded-2 p-1">Recherche: </div>
    </div>

			<div
				id="display-car" class="w-100 d-flex flex-grow mb-3 justify-content-center minWindowsWidth">
			</div>
		</form>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	<script src="scripts/car/displayScript.js"></script>
{% endblock %}
